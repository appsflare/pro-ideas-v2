@model ExternalLoginConfirmationViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutSignIn";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <div class="card card-signup">
            <form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form">
                <div class="header header-primary text-center">                    
                    <h4 class="card-title">Associate your @ViewData["LoginProvider"] account.</h4>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>               

                <div class="content">

                    <p class="text-info">
                        You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                        Please enter an email address for this site below and click the Register button to finish
                        logging in.
                    </p>

                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">face</i>
                        </span>
                        <div class="form-group is-empty" asp-validation-for="FullName">
                            <input asp-for="FullName" class="form-control" value="@Model.FullName" type="text" placeholder="Full Name..." autocomplete="off" />
                            <span class="material-icons form-control-feedback">clear</span>
                            <span class="material-input" />
                            <span asp-validation-for="FullName" class="help-block validation-message"></span>
                        </div>
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div class="form-group is-empty" asp-validation-for="Email">
                            <input asp-for="Email" class="form-control" value="@Model.Email" type="email" placeholder="Email..." autocomplete="off" />
                            <span class="material-icons form-control-feedback">clear</span>
                            <span class="material-input" />
                            <span asp-validation-for="Email" class="help-block validation-message"></span>
                        </div>
                    </div>
                </div>

                <div class="footer text-center">
                    <button class="btn btn-primary btn-simple btn-wd btn-lg" type="submit">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
