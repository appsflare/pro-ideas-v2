<div class="row">
    <div class="container create-idea">
        <div class="row">
            <h4 class="common-page-header">Explore Ideas</h4>
            <div class="content">
                @foreach (var idea in Model.Ideas)
                {
                    <div class="col-sm-4 idea-card-wrap">
                        <div class="idea-card">
                            <div class="card-image"><img src="/api/ideas/@idea.Id/banner" /></div>
                            <div class="card-content-container">
                                <h3 class="card-header">
                                    <a asp-controller="Idea" asp-action="Details" asp-route-id="@idea.Id">
                                        @idea.Title
                                    </a>
                                </h3>
                                <span class="author-wrap">Share by <span class="author">Gopi Krishna J</span></span>
                                <p class="card-content">@idea.Description</p>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-simple idea-like"><i class="material-icons">favorite</i><span>12</span></button>
                                <button class="btn btn-simple idea-comment"><i class="material-icons">insert_comment</i><span>25</span></button>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_FloatingButtons")
