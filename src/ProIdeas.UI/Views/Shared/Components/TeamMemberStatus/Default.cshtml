@model  TeamMemberViewModel

@switch (Model.Status)
{
    case MemberStatus.Request:
        <button class="btn btn-simple btn-round btn-simple-border" disabled="disabled" >Pending</button>
        break;
    case MemberStatus.Approved:
        <button class="btn btn-simple pull-left btn-round btn-simple-border" disabled="disabled">
            Team Member
        </button>
        break;
    default:

        <form class="form-inline" method="post" asp-controller="team" 
                asp-action="Register" 
                asp-route-id ="@Model.IdeaId"
                asp-route-userId ="@Model.UserId">
            <button class="btn btn-simple btn-round btn-simple-border">
                Join Idea
            </button>
        </form>
     
        break;
}