@model  TeamMemberStatusViewModel

@switch (Model.Status)
{
    case MemberStatus.Request:
        <button class="btn btn-warning" disabled="disabled" >Pending</button>
        break;
    case MemberStatus.Approved:
        break;
    default:

        <form class="form-inline" method="post" asp-controller="team" 
                asp-action="Register" 
                asp-route-id ="@Model.IdeaId"
                asp-route-userId ="@Model.UserId">
            <button class="btn btn-primary">
                Join Idea
            </button>
        </form>
     
        break;
}