@model IdeaInfoViewModel
<div class="col-sm-4 idea-card-wrap">
    <div class="idea-card">
        <div class="card-image"><img src="/api/ideas/@Model.Id/banner" /></div>
        <div class="card-content-container">
            <h3 class="card-header">
                <a asp-controller="Idea" asp-action="Details" asp-route-id="@Model.Id">
                    @Model.Title
                </a>
            </h3>
            <span class="author-wrap">Share by <span class="author">@Model.Owner.FullName</span></span>
            <p class="card-content">@Model.Description</p>
        </div>
        <div class="card-footer">
            <button class="btn btn-simple idea-like"><i class="material-icons">favorite</i><span>@Model.Likes</span></button>
            <button class="btn btn-simple idea-comment"><i class="material-icons">insert_comment</i><span>@Model.Comments</span></button>
        </div>
    </div>

</div>