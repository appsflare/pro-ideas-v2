@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="user-scalable=no, initial-scale=1, minimal-ui, maximum-scale=1, minimum-scale=1" />
    <meta name="description" content="An realtime dashboard application to share and track ideas" />
    <title>@ViewData["Title"] - Lot Of Ideas</title>
    <link rel="shortcut icon" type="image/png" href="/favicon.png?v1" sizes="16x16 32x32 64x64" />
    <!-- Material Design fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" type="text/css" />
    @*<link rel="stylesheet" href="/styles/animate.css" />*@
    <!-- Font Awesome -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css" />
    <environment names="Development,Staging,Production">
        @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@
        <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    @await Html.PartialAsync("_CommonLibImports")

    @RenderSection("Styles", required: false)

    <div class="app-page">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand logo">
                        <img src="/logos/ideaboard-logo-white-nocap.png" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">                    
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
        <div class="container body-content">
            <div class="wrapper">
                <div class="main">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer>
            <p class="copyright">&copy; 2017 - ProIdeas.UI</p>
        </footer>
    </div>    
    @await Html.PartialAsync("_CommonImports")
    @RenderSection("Scripts", required: false)
</body>

</html>
